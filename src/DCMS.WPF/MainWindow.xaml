<Window x:Class="DCMS.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:DCMS.WPF.Controls"
        xmlns:views="clr-namespace:DCMS.WPF.Views"
        mc:Ignorable="d"
        Title="نظام إدارة المراسلات - DCMS" 
        Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Icon="/Assets/dcms_logo.png"
        Background="#F5F7FA"
        FlowDirection="RightToLeft"
        x:Name="MainWindowRoot">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar Navigation with Gradient -->
        <Border Grid.Column="0" BorderBrush="#34495E" BorderThickness="0,0,1,0">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#1a2a3a" Offset="0"/>
                    <GradientStop Color="#2C3E50" Offset="0.3"/>
                    <GradientStop Color="#34495E" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Logo/Header with Gradient -->
                <Border Grid.Row="0" Margin="15" CornerRadius="10">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#667eea" Offset="0"/>
                            <GradientStop Color="#764ba2" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                <StackPanel Margin="15">
                    <TextBlock Text="📧" FontSize="40" HorizontalAlignment="Center" Margin="0,10"/>
                    <TextBlock Text="DCMS" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Foreground="White"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="نظام إدارة المراسلات" 
                               FontSize="12" 
                               Foreground="#BDC3C7"
                               HorizontalAlignment="Center"
                               Margin="0,5,0,0"/>
                </StackPanel>
                </Border>

                <StackPanel Grid.Row="1" Margin="0,20,0,0">
                    
                    <RadioButton x:Name="btnCommandCenter"
                            Content="🤖  الدردشة ومركز القيادة"
                            Style="{DynamicResource NavRadioButtonStyle}"
                            Margin="0,10,0,0"
                            GroupName="Nav"
                            IsChecked="{Binding SelectedNavigationItem, Converter={StaticResource EqualityConverter}, ConverterParameter=CommandCenter}"
                            Command="{Binding NavigateCommand}"
                            CommandParameter="CommandCenter"/>

                    <RadioButton x:Name="btnDashboard"
                            Content="📊  لوحة القيادة"
                            Style="{DynamicResource NavRadioButtonStyle}"
                            GroupName="Nav"
                            IsChecked="{Binding SelectedNavigationItem, Converter={StaticResource EqualityConverter}, ConverterParameter=Dashboard}"
                            Command="{Binding NavigateCommand}"
                            CommandParameter="Dashboard"/>

                    <RadioButton x:Name="btnInbound"
                            Content="📥  المراسلات الواردة"
                            Style="{DynamicResource NavRadioButtonStyle}"
                            Visibility="{Binding CanAddInbound, Converter={StaticResource BooleanToVisibilityConverter}}"
                            GroupName="Nav"
                            IsChecked="{Binding SelectedNavigationItem, Converter={StaticResource EqualityConverter}, ConverterParameter=Inbound}"
                            Command="{Binding NavigateCommand}"
                            CommandParameter="Inbound"/>

                    <RadioButton x:Name="btnOutbound"
                            Content="✉️  المراسلات الصادرة"
                            Style="{DynamicResource NavRadioButtonStyle}"
                            Visibility="{Binding CanAddOutbound, Converter={StaticResource BooleanToVisibilityConverter}}"
                            GroupName="Nav"
                            IsChecked="{Binding SelectedNavigationItem, Converter={StaticResource EqualityConverter}, ConverterParameter=Outbound}"
                            Command="{Binding NavigateCommand}"
                            CommandParameter="Outbound"/>

                    <RadioButton x:Name="btnCalendar"
                            Content="🗓️  أجندة الاجتماعات"
                            Style="{DynamicResource NavRadioButtonStyle}"
                            GroupName="Nav"
                            IsChecked="{Binding SelectedNavigationItem, Converter={StaticResource EqualityConverter}, ConverterParameter=Calendar}"
                            Command="{Binding NavigateCommand}"
                            CommandParameter="Calendar"/>

                    <RadioButton x:Name="btnSearch"
                            Content="🔍  البحث"
                            Style="{DynamicResource NavRadioButtonStyle}"
                            GroupName="Nav"
                            IsChecked="{Binding SelectedNavigationItem, Converter={StaticResource EqualityConverter}, ConverterParameter=Search}"
                            Command="{Binding NavigateCommand}"
                            CommandParameter="Search"/>
                    
                    <RadioButton x:Name="btnUsers"
                            Content="🔐  إدارة المستخدمين"
                            Style="{DynamicResource NavRadioButtonStyle}"
                            Visibility="{Binding CanManageUsers, Converter={StaticResource BooleanToVisibilityConverter}}"
                            GroupName="Nav"
                            IsChecked="{Binding SelectedNavigationItem, Converter={StaticResource EqualityConverter}, ConverterParameter=Users}"
                            Command="{Binding NavigateCommand}"
                            CommandParameter="Users"/>

                    <RadioButton x:Name="btnEngineers"
                            Content="⚙️  إدارة المهندسين"
                            Style="{DynamicResource NavRadioButtonStyle}"
                            Visibility="{Binding CanManageEngineers, Converter={StaticResource BooleanToVisibilityConverter}}"
                            GroupName="Nav"
                            IsChecked="{Binding SelectedNavigationItem, Converter={StaticResource EqualityConverter}, ConverterParameter=Engineers}"
                            Command="{Binding NavigateCommand}"
                            CommandParameter="Engineers"/>

                    <RadioButton x:Name="btnAuditLog"
                            Content="📝  سجل العمليات"
                            Style="{DynamicResource NavRadioButtonStyle}"
                            Visibility="{Binding CanSeeAuditLog, Converter={StaticResource BooleanToVisibilityConverter}}"
                            GroupName="Nav"
                            IsChecked="{Binding SelectedNavigationItem, Converter={StaticResource EqualityConverter}, ConverterParameter=AuditLog}"
                            Command="{Binding NavigateCommand}"
                            CommandParameter="AuditLog"/>

                    <RadioButton x:Name="btnReporting"
                            Content="📊  التقارير"
                            Style="{DynamicResource NavRadioButtonStyle}"
                            Visibility="{Binding CanSeeReporting, Converter={StaticResource BooleanToVisibilityConverter}}"
                            GroupName="Nav"
                            IsChecked="{Binding SelectedNavigationItem, Converter={StaticResource EqualityConverter}, ConverterParameter=Reporting}"
                            Command="{Binding NavigateCommand}"
                            CommandParameter="Reporting"/>
                    <RadioButton x:Name="btnBackup"
                            Content="💾  النسخ الاحتياطي"
                            Style="{DynamicResource NavRadioButtonStyle}"
                            Visibility="{Binding CanSeeBackup, Converter={StaticResource BooleanToVisibilityConverter}}"
                            GroupName="Nav"
                            IsChecked="{Binding SelectedNavigationItem, Converter={StaticResource EqualityConverter}, ConverterParameter=Backup}"
                            Command="{Binding NavigateCommand}"
                            CommandParameter="Backup"/>
                    <RadioButton x:Name="btnImport"
                            Content="📥  استيراد من Excel"
                            Style="{DynamicResource NavRadioButtonStyle}"
                            Visibility="{Binding CanSeeBackup, Converter={StaticResource BooleanToVisibilityConverter}}"
                            GroupName="Nav"
                            IsChecked="{Binding SelectedNavigationItem, Converter={StaticResource EqualityConverter}, ConverterParameter=Import}"
                            Command="{Binding NavigateCommand}"
                            CommandParameter="Import"/>
                    <RadioButton x:Name="btnHelp"
                            Content="❓  دليل المستخدم"
                            Style="{DynamicResource NavRadioButtonStyle}"
                            GroupName="Nav"
                            IsChecked="{Binding SelectedNavigationItem, Converter={StaticResource EqualityConverter}, ConverterParameter=Help}"
                            Command="{Binding NavigateCommand}"
                            CommandParameter="Help"/>
                </StackPanel>

                <!-- Recent Items (Takes remaining space) -->
                <controls:RecentItemsControl x:Name="recentItemsControl" Grid.Row="2" Margin="10"/>

                <!-- User Info & Logout -->
                <StackPanel Grid.Row="3" Margin="20" Background="#34495E">
                    <Border Background="#2C3E50" CornerRadius="5" Padding="10" Margin="0,0,0,10">
                        <StackPanel>
                            <TextBlock Text="👤 مرحباً" 
                                       Foreground="#BDC3C7" 
                                       FontSize="11"/>
                            <TextBlock x:Name="txtUserName"
                                       Text="{Binding UserName}" 
                                       Foreground="White" 
                                       FontSize="14"
                                       FontWeight="Bold"
                                       Margin="0,3,0,0"/>
                        </StackPanel>
                    </Border>
                    
                    <Button Content="ℹ️ عن النظام"
                            Style="{DynamicResource NavButtonStyle}"
                            Background="#7F8C8D"
                            Margin="0,0,0,10"
                            Click="BtnAbout_Click"/>

                    <Button Content="🚪 تسجيل الخروج"
                            Style="{DynamicResource NavButtonStyle}"
                            Background="#E74C3C"
                            Command="{Binding LogoutCommand}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Content Area -->
        <Border Grid.Column="1" Background="#ECEFF1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Grid Grid.Row="0" Background="White">
                    <Grid.Effect>
                        <DropShadowEffect Color="#E0E0E0" BlurRadius="10" ShadowDepth="2" Opacity="0.5"/>
                    </Grid.Effect>

                    <!-- Global Search Bar -->
                    <controls:GlobalSearchControl x:Name="searchControl" Width="500" HorizontalAlignment="Center" VerticalAlignment="Center" Panel.ZIndex="10"/>
                    
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20,0">
                        <!-- Notification Bell -->
                        <Grid Margin="0,0,20,0">
                            <Button x:Name="btnNotifications" Click="BtnNotifications_Click" Cursor="Hand" Background="Transparent" BorderThickness="0">
                                <TextBlock Text="🔔" FontSize="24" Foreground="#7F8C8D"/>
                            </Button>
                            
                            <!-- Badge -->
                            <Border x:Name="bdrNotificationBadge" Background="#E74C3C" CornerRadius="10" Width="20" Height="20" 
                                    HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,-5,-5,0" Visibility="Collapsed">
                                <TextBlock x:Name="txtNotificationCount" Text="0" Foreground="White" FontSize="10" FontWeight="Bold" 
                                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>

                            <!-- Popup -->
                            <Popup x:Name="popNotifications" PlacementTarget="{Binding ElementName=btnNotifications}" 
                                   Placement="Bottom" StaysOpen="False" AllowsTransparency="True">
                                <Border Background="White" CornerRadius="8" BorderBrush="#BDC3C7" BorderThickness="1" Width="300" MaxHeight="400" Margin="0,5,0,0">
                                    <Border.Effect>
                                        <DropShadowEffect Color="#BDC3C7" BlurRadius="10" ShadowDepth="2" Opacity="0.5"/>
                                    </Border.Effect>
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>
                                        
                                        <Border Grid.Row="0" BorderBrush="#ECF0F1" BorderThickness="0,0,0,1" Padding="15,10">
                                            <Grid>
                                                <TextBlock Text="الإشعارات" FontWeight="Bold" FontSize="14" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                                <Button x:Name="btnClearNotifications" Content="مسح الكل" Click="BtnClearNotifications_Click" 
                                                        Background="Transparent" BorderThickness="0" Cursor="Hand"
                                                        HorizontalAlignment="Right" VerticalAlignment="Center"
                                                        FontSize="12" Foreground="#E74C3C"/>
                                            </Grid>
                                        </Border>
                                        
                                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                                            <StackPanel x:Name="stkNotificationsList" Margin="0,5"/>
                                        </ScrollViewer>
                                    </Grid>
                                </Border>
                            </Popup>
                        </Grid>
                    </StackPanel>
                </Grid>

                <Grid Grid.Row="1">
                    <ContentControl x:Name="ContentArea" Content="{Binding CurrentView}">
                        <ContentControl.Resources>
                            <!-- Template to support slide animation -->
                            <ControlTemplate x:Key="AnimatedContentTemplate" TargetType="ContentControl">
                                <Grid x:Name="TemplateGrid">
                                    <ContentPresenter Content="{TemplateBinding Content}"/>
                                </Grid>
                            </ControlTemplate>
                        </ContentControl.Resources>
                    </ContentControl>

                    <!-- Toast Notifications Overlay -->
                    <ItemsControl ItemsSource="{Binding Notifications.ActiveNotifications}"
                                  VerticalAlignment="Top" HorizontalAlignment="Center" 
                                  Margin="0,80,0,0" Width="400" Panel.ZIndex="100">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Vertical" VerticalAlignment="Bottom"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <controls:ToastControl/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                </Grid>
            </Grid>
        </Border>

        <!-- Global Chat Overlay -->
        <Grid x:Name="GlobalChatOverlay" Grid.ColumnSpan="2" Panel.ZIndex="500">
            <!-- Floating Action Button (FAB) for Chat -->
            <Button x:Name="ChatFab" 
                    Command="{Binding ToggleChatCommand}"
                    Width="56" Height="56"
                    HorizontalAlignment="Right" VerticalAlignment="Bottom"
                    Margin="0,0,25,25"
                    Cursor="Hand">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <!-- Main FAB Circle -->
                            <Ellipse x:Name="FabCircle" Fill="#0D6EFD">
                                <Ellipse.Effect>
                                    <DropShadowEffect Color="#000000" BlurRadius="15" ShadowDepth="3" Opacity="0.4"/>
                                </Ellipse.Effect>
                                <Ellipse.RenderTransform>
                                    <ScaleTransform x:Name="FabScale" CenterX="28" CenterY="28" ScaleX="1" ScaleY="1"/>
                                </Ellipse.RenderTransform>
                            </Ellipse>
                            <TextBlock Text="💬" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            
                            <!-- Unread Badge -->
                            <Border x:Name="UnreadBadge" 
                                    Background="#E74C3C" 
                                    CornerRadius="10" 
                                    MinWidth="20" Height="20"
                                    HorizontalAlignment="Right" VerticalAlignment="Top"
                                    Margin="0,-5,-5,0"
                                    Visibility="{Binding UnreadMessageCount, Converter={StaticResource IntToVisibilityConverter}}">
                                <TextBlock Text="{Binding UnreadMessageCount}" 
                                           FontSize="11" FontWeight="Bold" Foreground="White" 
                                           HorizontalAlignment="Center" VerticalAlignment="Center" Margin="4,0"/>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="FabCircle" Property="Fill" Value="#0056D6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
                <Button.Style>
                    <Style TargetType="Button">
                        <Style.Triggers>
                            <!-- Pulse Animation Trigger -->
                            <DataTrigger Binding="{Binding FabShouldPulse}" Value="True">
                                <DataTrigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                                             From="1" To="1.15" Duration="0:0:0.15" AutoReverse="True" RepeatBehavior="2x"/>
                                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                                             From="1" To="1.15" Duration="0:0:0.15" AutoReverse="True" RepeatBehavior="2x"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </DataTrigger.EnterActions>
                            </DataTrigger>
                        </Style.Triggers>
                        <Setter Property="RenderTransform">
                            <Setter.Value>
                                <ScaleTransform CenterX="28" CenterY="28"/>
                            </Setter.Value>
                        </Setter>
                        <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                    </Style>
                </Button.Style>
            </Button>

            <!-- Floating Chat Popup -->
            <Border Width="380" Height="500"
                    HorizontalAlignment="Right" VerticalAlignment="Bottom"
                    Margin="0,0,25,90"
                    Background="White" CornerRadius="16"
                    Visibility="{Binding IsChatOpen, Converter={StaticResource BooleanToVisibilityConverter}}">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" BlurRadius="25" ShadowDepth="5" Opacity="0.35"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/> <!-- Header -->
                        <RowDefinition Height="Auto"/> <!-- Online Users Header -->
                        <RowDefinition Height="120"/>   <!-- Online Users List -->
                        <RowDefinition Height="Auto"/> <!-- Conversation Header -->
                        <RowDefinition Height="*"/>    <!-- Messages -->
                        <RowDefinition Height="Auto"/> <!-- Input -->
                    </Grid.RowDefinitions>

                    <!-- Popup Header with Close Button -->
                    <Border Grid.Row="0" Background="#0D6EFD" CornerRadius="16,16,0,0" Padding="15,12">
                        <Grid>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                <TextBlock Text="💬" FontSize="18" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBlock Text="الدردشة" FontWeight="Bold" FontSize="16" Foreground="White" VerticalAlignment="Center"/>
                            </StackPanel>
                            <Button HorizontalAlignment="Right" Command="{Binding ToggleChatCommand}" 
                                    Background="Transparent" BorderThickness="0" Cursor="Hand">
                                <TextBlock Text="✕" FontSize="16" Foreground="White" FontWeight="Bold"/>
                            </Button>
                        </Grid>
                    </Border>

                    <!-- Online Users Header -->
                    <Border Grid.Row="1" Background="#F8F9FA" Padding="12,8" BorderBrush="#DEE2E6" BorderThickness="0,0,0,1">
                        <Grid>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                <TextBlock Text="👥" FontSize="14" Margin="0,0,8,0"/>
                                <TextBlock Text="المستخدمون المتصلون" FontWeight="SemiBold" FontSize="12" Foreground="#2C3E50"/>
                            </StackPanel>
                            <Button HorizontalAlignment="Right" Command="{Binding RefreshUsersCommand}" 
                                    Background="Transparent" BorderThickness="0" Cursor="Hand" ToolTip="تحديث">
                                <TextBlock Text="🔄" FontSize="11" Foreground="#3498DB"/>
                            </Button>
                        </Grid>
                    </Border>

                    <!-- Online Users List (Compact) -->
                    <ListBox Grid.Row="2" ItemsSource="{Binding OnlineUsers}" 
                             SelectedItem="{Binding SelectedOnlineUser, Mode=TwoWay}"
                             BorderThickness="0" Background="Transparent" Padding="5">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <Border Name="Container" Background="{TemplateBinding Background}" CornerRadius="6" Margin="2" Padding="8,6">
                                                <ContentPresenter />
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter TargetName="Container" Property="Background" Value="#E3F2FD"/>
                                                </Trigger>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="Container" Property="Background" Value="#F5F5F5"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid Grid.Column="0" Width="28" Height="28">
                                        <Ellipse Fill="{Binding UserName, Converter={StaticResource InitialsToColorConverter}}"/>
                                        <TextBlock Text="{Binding UserName, Converter={StaticResource UserInitialsConverter}}" 
                                                   FontSize="10" FontWeight="Bold" Foreground="White" 
                                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        <Ellipse Width="8" Height="8" Fill="#27AE60" 
                                                 HorizontalAlignment="Right" VerticalAlignment="Bottom" 
                                                 Stroke="White" StrokeThickness="1"/>
                                    </Grid>
                                    <TextBlock Grid.Column="1" Text="{Binding UserName}" FontSize="12" Foreground="#2C3E50" Margin="8,0,0,0" VerticalAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="FontWeight" Value="Normal"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding HasUnreadMessages}" Value="True">
                                                        <Setter Property="FontWeight" Value="Bold"/>
                                                        <Setter Property="Foreground" Value="#0D6EFD"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <Ellipse Grid.Column="2" Width="8" Height="8" Fill="#E74C3C" VerticalAlignment="Center"
                                             Visibility="{Binding HasUnreadMessages, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <!-- Conversation Header -->
                    <Border Grid.Row="3" Background="#EBEDEF" Padding="12,6" BorderBrush="#DEE2E6" BorderThickness="0,1,0,1">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="💬 " FontSize="11" Foreground="#34495E"/>
                            <TextBlock Text="{Binding SelectedUser, TargetNullValue='اختر مستخدم...'}" FontSize="11" Foreground="#2980B9" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Border>

                    <!-- Messages List -->
                    <ScrollViewer x:Name="ChatScrollViewer" Grid.Row="4" VerticalScrollBarVisibility="Auto" Padding="8">
                        <ItemsControl ItemsSource="{Binding FilteredMessages}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{Binding IsMe, Converter={StaticResource BooleanToChatColorConverter}}" 
                                            CornerRadius="10" Padding="10,8" Margin="0,0,0,6"
                                            HorizontalAlignment="{Binding IsMe, Converter={StaticResource BooleanToAlignmentConverter}}"
                                            MaxWidth="250">
                                        <StackPanel>
                                            <TextBlock Text="{Binding Sender}" FontSize="9" FontWeight="Bold" 
                                                       Foreground="#7F8C8D" Margin="0,0,0,2"
                                                       Visibility="{Binding IsMe, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>
                                            <views:SmartMentionTextBlock Text="{Binding Message}" TextWrapping="Wrap" FontSize="12">
                                                <views:SmartMentionTextBlock.Style>
                                                    <Style TargetType="views:SmartMentionTextBlock">
                                                        <Setter Property="Foreground" Value="#2C3E50"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsMe}" Value="True">
                                                                <Setter Property="Foreground" Value="White"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </views:SmartMentionTextBlock.Style>
                                            </views:SmartMentionTextBlock>

                                            <!-- Reactions Display -->
                                            <TextBlock Text="{Binding Reactions}" FontSize="10" Margin="0,4,0,0" 
                                                       Visibility="{Binding Reactions, Converter={StaticResource StringToVisibilityConverter}}"
                                                       HorizontalAlignment="Left" Background="#40000000" Padding="4,1" />

                                            <DockPanel LastChildFill="False" Margin="0,2,0,0">
                                                <TextBlock DockPanel.Dock="Left" Text="{Binding Timestamp, StringFormat='HH:mm'}" FontSize="8" 
                                                           Foreground="#95A5A6" VerticalAlignment="Center"/>
                                                
                                                <!-- Status Icons (Only for my messages) -->
                                                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" VerticalAlignment="Center" 
                                                            Visibility="{Binding IsMe, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                    <TextBlock x:Name="StatusIcon" Text="✓" FontSize="10" FontWeight="Bold" Foreground="#BDC3C7" Margin="4,0,0,0">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding Status}" Value="Read">
                                                                        <Setter Property="Text" Value="✓✓"/>
                                                                        <Setter Property="Foreground" Value="#3498DB"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>
                                                </StackPanel>
                                            </DockPanel>
                                        </StackPanel>
                                        <Border.ContextMenu>
                                            <ContextMenu>
                                                <MenuItem Header="✅ الموافقة" Command="{Binding DataContext.AddReactionCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}">
                                                    <MenuItem.CommandParameter>
                                                        <MultiBinding Converter="{StaticResource MultiValueConverter}">
                                                            <Binding Path="Id"/>
                                                            <Binding Source="✅"/>
                                                        </MultiBinding>
                                                    </MenuItem.CommandParameter>
                                                </MenuItem>
                                                <MenuItem Header="❌ الرفض" Command="{Binding DataContext.AddReactionCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}">
                                                    <MenuItem.CommandParameter>
                                                        <MultiBinding Converter="{StaticResource MultiValueConverter}">
                                                            <Binding Path="Id"/>
                                                            <Binding Source="❌"/>
                                                        </MultiBinding>
                                                    </MenuItem.CommandParameter>
                                                </MenuItem>
                                                <MenuItem Header="👍 أعجبني" Command="{Binding DataContext.AddReactionCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}">
                                                    <MenuItem.CommandParameter>
                                                        <MultiBinding Converter="{StaticResource MultiValueConverter}">
                                                            <Binding Path="Id"/>
                                                            <Binding Source="👍"/>
                                                        </MultiBinding>
                                                    </MenuItem.CommandParameter>
                                                </MenuItem>
                                                <MenuItem Header="😮 مذهل" Command="{Binding DataContext.AddReactionCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}">
                                                    <MenuItem.CommandParameter>
                                                        <MultiBinding Converter="{StaticResource MultiValueConverter}">
                                                            <Binding Path="Id"/>
                                                            <Binding Source="😮"/>
                                                        </MultiBinding>
                                                    </MenuItem.CommandParameter>
                                                </MenuItem>
                                            </ContextMenu>
                                        </Border.ContextMenu>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <!-- Input Area -->
                    <Border Grid.Row="5" Background="#F8F9FA" BorderBrush="#DEE2E6" BorderThickness="0,1,0,0" Padding="10" CornerRadius="0,0,16,16">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Grid.Column="0" 
                                     Text="{Binding ChatMessage, UpdateSourceTrigger=PropertyChanged}" 
                                     Padding="10,8" Background="White" BorderThickness="1" 
                                     BorderBrush="#DEE2E6" FontSize="13"
                                     IsEnabled="{Binding SelectedOnlineUser, Converter={StaticResource NullToBooleanConverter}}">
                                <TextBox.InputBindings>
                                    <KeyBinding Key="Enter" Command="{Binding SendChatMessageCommand}" />
                                </TextBox.InputBindings>
                                <TextBox.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="8"/>
                                    </Style>
                                </TextBox.Resources>
                            </TextBox>
                            <Button Grid.Column="1" Command="{Binding SendChatMessageCommand}" 
                                    Margin="8,0,0,0" Width="36" Height="36" 
                                    Background="#0D6EFD" Foreground="White" Cursor="Hand"
                                    IsEnabled="{Binding SelectedUser, Converter={StaticResource NullToBooleanConverter}}">
                                <Button.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="18"/>
                                    </Style>
                                </Button.Resources>
                                <TextBlock Text="➡️" FontSize="14"/>
                            </Button>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <!-- Lock Screen Overlay -->
        <Grid x:Name="LockScreenOverlay" Grid.ColumnSpan="2" Visibility="Collapsed" Panel.ZIndex="999">
            <Grid.RenderTransform>
                <TranslateTransform x:Name="LockScreenTransform" X="0"/>
            </Grid.RenderTransform>
            <!-- Content placeholder - LockScreenView injected from code-behind -->
        </Grid>
    </Grid>
</Window>
