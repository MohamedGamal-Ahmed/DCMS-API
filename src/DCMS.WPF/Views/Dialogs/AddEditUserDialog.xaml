<Window x:Class="DCMS.WPF.Views.Dialogs.AddEditUserDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="إضافة/تعديل مستخدم" 
        Height="550" Width="500"
        WindowStartupLocation="CenterOwner"
        Background="#F5F5F5"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="{Binding Title, RelativeSource={RelativeSource AncestorType=Window}}"
                   FontSize="24" 
                   FontWeight="Bold" 
                   Margin="0,0,0,20"
                   HorizontalAlignment="Center"/>

        <!-- Form Fields -->
        <StackPanel Grid.Row="1">
            <!-- Username -->
            <StackPanel Margin="0,0,0,15">
                <TextBlock Text="اسم المستخدم *" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <TextBox x:Name="txtUsername" 
                         Text="{Binding Username, Mode=TwoWay}"
                         Padding="10" 
                         FontSize="14"
                         Height="42"/>
            </StackPanel>

            <!-- Full Name -->
            <StackPanel Margin="0,0,0,15">
                <TextBlock Text="الاسم الكامل" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <TextBox x:Name="txtFullName" 
                         Text="{Binding FullName, Mode=TwoWay}"
                         Padding="10" 
                         FontSize="14"
                         Height="42"/>
            </StackPanel>

            <!-- Email -->
            <StackPanel Margin="0,0,0,15">
                <TextBlock Text="البريد الإلكتروني" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <TextBox x:Name="txtEmail" 
                         Text="{Binding Email, Mode=TwoWay}"
                         Padding="10" 
                         FontSize="14"
                         Height="42"/>
            </StackPanel>

            <!-- Change Password Checkbox -->
            <CheckBox x:Name="chkChangePassword" 
                      Content="تغيير كلمة المرور" 
                      FontSize="14" 
                      FontWeight="SemiBold"
                      Margin="0,0,0,15"
                      Checked="ChkChangePassword_CheckedChanged"
                      Unchecked="ChkChangePassword_CheckedChanged"
                      Visibility="Collapsed"/>

            <!-- Password -->
            <StackPanel x:Name="lblPassword" Margin="0,0,0,15">
                <TextBlock Text="كلمة المرور *" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <PasswordBox x:Name="txtPassword" 
                             Padding="10" 
                             FontSize="14"
                             Height="42"/>
            </StackPanel>

            <!-- Role -->
            <StackPanel Margin="0,0,0,15">
                <TextBlock Text="الدور *" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <ComboBox x:Name="cmbRole" 
                          SelectedValue="{Binding SelectedRole, Mode=TwoWay}"
                          Padding="10" 
                          FontSize="14"
                          Height="42"/>
            </StackPanel>

            <!-- IsActive -->
            <CheckBox x:Name="chkIsActive" 
                      Content="نشط" 
                      IsChecked="{Binding UserIsActive, Mode=TwoWay}"
                      FontSize="16"
                      FontWeight="SemiBold"
                      Margin="0,15,0,0"/>
        </StackPanel>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    Margin="0,20,0,0">
            <Button Content="حفظ" 
                    Width="120" 
                    Height="40" 
                    FontSize="16" 
                    Background="#4CAF50" 
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"
                    Margin="0,0,10,0"
                    Click="BtnSave_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="5"
                                            Padding="10">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                          VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
<Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#45a049"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button Content="إلغاء" 
                    Width="120" 
                    Height="40" 
                    FontSize="16" 
                    Background="#f44336" 
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="BtnCancel_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="5"
                                            Padding="10">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                          VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#da190b"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </Grid>
</Window>
