<Window x:Class="DCMS.WPF.Views.Dialogs.MeetingExportOptionsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DCMS.WPF.Views.Dialogs"
        mc:Ignorable="d"
        Title="خيارات التصدير" Height="450" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        FlowDirection="RightToLeft"
        Background="#F9FAFB">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="تصدير أجندة الاجتماعات" FontSize="20" FontWeight="Bold" Foreground="#111827" Margin="0,0,0,20"/>

        <TabControl Grid.Row="1" Background="Transparent" BorderThickness="0">
            <!-- Day Export -->
            <TabItem Header="يوم محدد">
                <StackPanel Margin="0,20">
                    <TextBlock Text="اختر اليوم:" Margin="0,0,0,10" Foreground="#374151"/>
                    <DatePicker SelectedDate="{Binding SelectedDate}" Height="35"/>
                    <Button Command="{Binding ExportDayCommand}" Content="تصدير اليوم" 
                            Margin="0,30,0,0" Height="40" Background="#10B981" Foreground="White" BorderThickness="0" Cursor="Hand">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="6"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>
            </TabItem>

            <!-- Week Export -->
            <TabItem Header="أسبوع">
                <StackPanel Margin="0,20">
                    <TextBlock Text="رقم الأسبوع في الشهر:" Margin="0,0,0,5" Foreground="#374151"/>
                    <ComboBox ItemsSource="{Binding Weeks}" SelectedItem="{Binding SelectedWeek}" Height="35" Margin="0,0,0,15"/>

                    <TextBlock Text="الشهر:" Margin="0,0,0,5" Foreground="#374151"/>
                    <ComboBox ItemsSource="{Binding Months}" SelectedItem="{Binding SelectedMonth}" Height="35" Margin="0,0,0,15"/>

                    <TextBlock Text="السنة:" Margin="0,0,0,5" Foreground="#374151"/>
                    <ComboBox ItemsSource="{Binding Years}" SelectedItem="{Binding SelectedYear}" Height="35"/>

                    <Button Command="{Binding ExportWeekCommand}" Content="تصدير الأسبوع" 
                            Margin="0,20,0,0" Height="40" Background="#3B82F6" Foreground="White" BorderThickness="0" Cursor="Hand">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="6"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>
            </TabItem>

            <!-- Month Export -->
            <TabItem Header="شهر كامل">
                <StackPanel Margin="0,20">
                    <TextBlock Text="الشهر:" Margin="0,0,0,5" Foreground="#374151"/>
                    <ComboBox ItemsSource="{Binding Months}" SelectedItem="{Binding SelectedMonth}" Height="35" Margin="0,0,0,15"/>

                    <TextBlock Text="السنة:" Margin="0,0,0,5" Foreground="#374151"/>
                    <ComboBox ItemsSource="{Binding Years}" SelectedItem="{Binding SelectedYear}" Height="35"/>

                    <Button Command="{Binding ExportMonthCommand}" Content="تصدير الشهر" 
                            Margin="0,30,0,0" Height="40" Background="#6366F1" Foreground="White" BorderThickness="0" Cursor="Hand">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="6"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>
            </TabItem>
        </TabControl>

        <Button Grid.Row="2" Command="{Binding CancelCommand}" Content="إلغاء" 
                HorizontalAlignment="Left" Background="Transparent" Foreground="#6B7280" BorderThickness="0" Cursor="Hand"/>
    </Grid>
</Window>
