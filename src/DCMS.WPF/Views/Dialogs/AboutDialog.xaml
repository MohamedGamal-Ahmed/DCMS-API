<Window x:Class="DCMS.WPF.Views.Dialogs.AboutDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="عن النظام" 
        Height="550" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="White"
        FlowDirection="RightToLeft">
    
    <Border Padding="20,10,20,20">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <!-- Logo/Icon Area -->
            <Border Width="120" Height="120" Background="#2C3E50" CornerRadius="60" Margin="0,0,0,20">
                <TextBlock Text="DCMS" 
                           Foreground="White" 
                           FontSize="32" 
                           FontWeight="Bold" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center"/>
            </Border>

            <!-- App Name -->
            <TextBlock Text="نظام إدارة المراسلات" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Foreground="#2C3E50"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,5"/>
            
            <TextBlock Text="DCMS" 
                       FontSize="18" 
                       Foreground="#7F8C8D"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <!-- Version Info -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,5">
                <TextBlock Text="الإصدار: " FontWeight="SemiBold"/>
                <TextBlock Text="1.0.7"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,15">
                <TextBlock Text="تاريخ الإصدار: " FontWeight="SemiBold"/>
                <TextBlock Text="ديسمبر 2025"/>
            </StackPanel>

            <!-- What's New Info Icon -->
            <Border Width="30" Height="30" Background="#3498DB" CornerRadius="15" Margin="0,0,0,10" Cursor="Hand" HorizontalAlignment="Center">
                <Border.ToolTip>
                    <ToolTip Background="White" BorderBrush="#3498DB" BorderThickness="1" Padding="10">
                        <StackPanel Width="280">
                            <TextBlock Text="الجديد في هذا الإصدار:" FontWeight="Bold" Foreground="#2C3E50" Margin="0,0,0,10"/>
                            <TextBlock Text="• [أدمن] إمكانية تعديل المهندس المسئول في نافذة المتابعة." FontSize="11" TextWrapping="Wrap" Margin="0,0,0,5"/>
                            <TextBlock Text="• [صادر] تحويل المرفقات لنظام الروابط (URL) وتفعيل سجل الأحداث." FontSize="11" TextWrapping="Wrap" Margin="0,0,0,5"/>
                            <TextBlock Text="• [صادر] إضافة حقول منفصلة للمرفق الأصلي ومرفق الرد." FontSize="11" TextWrapping="Wrap" Margin="0,0,0,5"/>
                            <TextBlock Text="• تحسينات في استقرار نظام التحديث التلقائي وتنسيق النوافذ." FontSize="11" TextWrapping="Wrap"/>
                        </StackPanel>
                    </ToolTip>
                </Border.ToolTip>
                <TextBlock Text="i" Foreground="White" FontWeight="Bold" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>

            <!-- Developer Info -->
            <Border BorderBrush="#E0E0E0" BorderThickness="0,1,0,0" Padding="0,10,0,0" Width="300" Margin="0,10,0,0">
                <StackPanel>
                    <TextBlock Text="برمجة وتطوير" 
                               HorizontalAlignment="Center" 
                               Foreground="#7F8C8D"
                               FontSize="11"/>
                    <TextBlock Text="Mohamed Gamal" 
                               HorizontalAlignment="Center" 
                               FontWeight="Bold"
                               FontSize="14"
                               Foreground="#2980B9"
                               Margin="0,5,0,0"/>
                    <TextBlock Text="01033501334" 
                               HorizontalAlignment="Center" 
                               Foreground="#7F8C8D"
                               FontSize="12"
                               Margin="0,2,0,0"/>
                </StackPanel>
            </Border>
            
            <!-- Close Button -->
            <Button Content="إغلاق" 
                    IsCancel="True"
                    Width="100"
                    Height="35"
                    Margin="0,20,0,0"
                    Background="#95A5A6"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="5">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </Border>
</Window>
