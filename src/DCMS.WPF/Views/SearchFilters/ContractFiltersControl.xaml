<UserControl x:Class="DCMS.WPF.Views.SearchFilters.ContractFiltersControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="SearchFiltersResources.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Row 1: Subject Number, Code, Party, Project Name -->
        <Grid Grid.Row="0" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="رقم الموضوع:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBox Grid.Column="1" Text="{Binding SearchSubjectNumber, UpdateSourceTrigger=PropertyChanged}" 
                      Style="{StaticResource ModernTextBox}" Margin="0,0,20,0">
                <TextBox.InputBindings>
                    <KeyBinding Key="Enter" Command="{Binding DataContext.SearchCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                </TextBox.InputBindings>
            </TextBox>

            <TextBlock Grid.Column="2" Text="كود الموضوع:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBox Grid.Column="3" Text="{Binding SearchCode, UpdateSourceTrigger=PropertyChanged}" 
                      Style="{StaticResource ModernTextBox}" Margin="0,0,20,0">
                <TextBox.InputBindings>
                    <KeyBinding Key="Enter" Command="{Binding DataContext.SearchCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                </TextBox.InputBindings>
            </TextBox>

            <TextBlock Grid.Column="4" Text="الطرف الثاني:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBox Grid.Column="5" Text="{Binding SearchFrom, UpdateSourceTrigger=PropertyChanged}" 
                      Style="{StaticResource ModernTextBox}" Margin="0,0,20,0">
                <TextBox.InputBindings>
                    <KeyBinding Key="Enter" Command="{Binding DataContext.SearchCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                </TextBox.InputBindings>
            </TextBox>

            <TextBlock Grid.Column="6" Text="اسم المشروع:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBox Grid.Column="7" Text="{Binding SearchSubject, UpdateSourceTrigger=PropertyChanged}" 
                      Style="{StaticResource ModernTextBox}">
                <TextBox.InputBindings>
                    <KeyBinding Key="Enter" Command="{Binding DataContext.SearchCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                </TextBox.InputBindings>
            </TextBox>
        </Grid>

        <!-- Row 2: Responsible Engineer, Transferred To, Contract Number -->
        <Grid Grid.Row="1" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="المهندس المسؤول:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <ComboBox Grid.Column="1" 
                       ItemsSource="{Binding MainEngineers}"
                       SelectedValue="{Binding SearchResponsibleEngineer}"
                       SelectedValuePath="FullName"
                       DisplayMemberPath="FullName"
                       Style="{StaticResource ModernComboBox}"
                       Margin="0,0,20,0"
                       IsEditable="True"
                       IsTextSearchEnabled="True">
                <ComboBox.InputBindings>
                    <KeyBinding Key="Enter" Command="{Binding DataContext.SearchCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                </ComboBox.InputBindings>
            </ComboBox>

            <TextBlock Grid.Column="2" Text="المحول إليه:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <ComboBox Grid.Column="3" 
                       ItemsSource="{Binding AvailableEngineers}"
                       SelectedValue="{Binding SearchTransferredTo}"
                       SelectedValuePath="FullName"
                       DisplayMemberPath="FullName"
                       Style="{StaticResource ModernComboBox}"
                       Margin="0,0,20,0"
                       IsEditable="True"
                       IsTextSearchEnabled="True">
                <ComboBox.InputBindings>
                    <KeyBinding Key="Enter" Command="{Binding DataContext.SearchCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                </ComboBox.InputBindings>
            </ComboBox>

            <TextBlock Grid.Column="4" Text="رقم العقد:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBox Grid.Column="5" Text="{Binding SearchCode, UpdateSourceTrigger=PropertyChanged}" 
                       Style="{StaticResource ModernTextBox}">
                <TextBox.InputBindings>
                    <KeyBinding Key="Enter" Command="{Binding DataContext.SearchCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                </TextBox.InputBindings>
            </TextBox>
        </Grid>

        <!-- Row 3: Date Range, Status -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="160"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="160"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="من تاريخ:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <DatePicker Grid.Column="1" SelectedDate="{Binding StartDate}" Height="36" Padding="8" Margin="0,0,20,0"/>

            <TextBlock Grid.Column="2" Text="إلى تاريخ:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <DatePicker Grid.Column="3" SelectedDate="{Binding EndDate}" Height="36" Padding="8" Margin="0,0,20,0"/>

            <TextBlock Grid.Column="4" Text="الحالة:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <ComboBox Grid.Column="5" ItemsSource="{Binding Source={StaticResource CorrespondenceStatusEnum}}" 
                       SelectedItem="{Binding SelectedStatus}" Style="{StaticResource ModernComboBox}"/>
        </Grid>
        
        <!-- Row 4: Contract Type -->
        <Grid Grid.Row="3" Margin="0,15,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="نوع العقد:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <ComboBox Grid.Column="1" SelectedItem="{Binding SelectedContractType}" Height="36" FontSize="14">
                <ComboBoxItem Content="الكل" IsSelected="True"/>
                <ComboBoxItem Content="NDA" Tag="NDA"/>
                <ComboBoxItem Content="MOU" Tag="MOU"/>
                <ComboBoxItem Content="JV Agreement" Tag="JVAgreement"/>
                <ComboBoxItem Content="Consortium Agreement" Tag="ConsortiumAgreement"/>
                <ComboBoxItem Content="Prepaid Agreement" Tag="PrepaidAgreement"/>
                <ComboBoxItem Content="EOI" Tag="EOI"/>
                <ComboBoxItem Content="LOI" Tag="LOI"/>
            </ComboBox>
        </Grid>
    </Grid>
</UserControl>
