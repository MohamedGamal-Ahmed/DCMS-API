<UserControl x:Class="DCMS.WPF.Views.SearchFilters.EmailFiltersControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="SearchFiltersResources.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Row 1: From, To -->
        <Grid Grid.Row="0" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="رقم الموضوع:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBox Grid.Column="1" Text="{Binding SearchSubjectNumber, UpdateSourceTrigger=PropertyChanged}" 
                      Style="{StaticResource ModernTextBox}" Margin="0,0,20,0">
                <TextBox.InputBindings>
                    <KeyBinding Key="Enter" Command="{Binding DataContext.SearchCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                </TextBox.InputBindings>
            </TextBox>

            <TextBlock Grid.Column="2" Text="كود الموضوع:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBox Grid.Column="3" Text="{Binding SearchCode, UpdateSourceTrigger=PropertyChanged}" 
                      Style="{StaticResource ModernTextBox}" Margin="0,0,20,0">
                <TextBox.InputBindings>
                    <KeyBinding Key="Enter" Command="{Binding DataContext.SearchCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                </TextBox.InputBindings>
            </TextBox>

            <TextBlock Grid.Column="4" Text="المهندس المسؤول:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <ComboBox Grid.Column="5" 
                       ItemsSource="{Binding MainEngineers}"
                       SelectedValue="{Binding SearchResponsibleEngineer}"
                       SelectedValuePath="FullName"
                       DisplayMemberPath="FullName"
                       Style="{StaticResource ModernComboBox}"
                       Margin="0,0,20,0"
                       IsEditable="True"
                       IsTextSearchEnabled="True">
                <ComboBox.InputBindings>
                    <KeyBinding Key="Enter" Command="{Binding DataContext.SearchCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                </ComboBox.InputBindings>
            </ComboBox>

            <TextBlock Grid.Column="6" Text="إلى (To):" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBox Grid.Column="7" Text="{Binding SearchTo, UpdateSourceTrigger=PropertyChanged}" 
                      Style="{StaticResource ModernTextBox}"
                      ToolTip="البريد الإلكتروني للمستقبل">
                <TextBox.InputBindings>
                    <KeyBinding Key="Enter" Command="{Binding DataContext.SearchCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                </TextBox.InputBindings>
            </TextBox>
        </Grid>

        <!-- Row 2: CC, Subject -->
        <Grid Grid.Row="1" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="نسخة (CC):" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBox Grid.Column="1" Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}" 
                       Style="{StaticResource ModernTextBox}" Margin="0,0,20,0"
                       ToolTip="نسخة كربونية">
                <TextBox.InputBindings>
                    <KeyBinding Key="Enter" Command="{Binding DataContext.SearchCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                </TextBox.InputBindings>
            </TextBox>

            <TextBlock Grid.Column="2" Text="الموضوع:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBox Grid.Column="3" Text="{Binding SearchSubject, UpdateSourceTrigger=PropertyChanged}" 
                       Style="{StaticResource ModernTextBox}">
                <TextBox.InputBindings>
                    <KeyBinding Key="Enter" Command="{Binding DataContext.SearchCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                </TextBox.InputBindings>
            </TextBox>
        </Grid>

        <!-- Row 3: Date Range, Status -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="160"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="160"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="من تاريخ:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <DatePicker Grid.Column="1" SelectedDate="{Binding StartDate}" Height="36" Padding="8" Margin="0,0,20,0"/>

            <TextBlock Grid.Column="2" Text="إلى تاريخ:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <DatePicker Grid.Column="3" SelectedDate="{Binding EndDate}" Height="36" Padding="8" Margin="0,0,20,0"/>

            <TextBlock Grid.Column="4" Text="الحالة:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <ComboBox Grid.Column="5" ItemsSource="{Binding Source={StaticResource CorrespondenceStatusEnum}}" 
                       SelectedItem="{Binding SelectedStatus}" Style="{StaticResource ModernComboBox}"/>
        </Grid>

        <!-- Row 4: Responsible Engineer Filter (Secondary) -->
        <Grid Grid.Row="3" Margin="0,15,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="المحول إليه:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <ComboBox Grid.Column="1" 
                       ItemsSource="{Binding AvailableEngineers}"
                       SelectedValue="{Binding SearchTransferredTo}"
                       SelectedValuePath="FullName"
                       DisplayMemberPath="FullName"
                       Style="{StaticResource ModernComboBox}"
                       IsEditable="True"
                       IsTextSearchEnabled="True"
                       ToolTip="البحث عن الموضوعات المسندة لمهندس معين">
                <ComboBox.InputBindings>
                    <KeyBinding Key="Enter" Command="{Binding DataContext.SearchCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                </ComboBox.InputBindings>
            </ComboBox>
        </Grid>
    </Grid>
</UserControl>
