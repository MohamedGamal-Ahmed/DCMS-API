<Window x:Class="DCMS.WPF.Views.AuditLogDetailsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:converters="clr-namespace:DCMS.WPF.Converters"
        Title="تفاصيل السجل"
        Height="500" Width="700"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource MaterialDesignPaper}">
    
    <Window.Resources>
        <converters:SmartJsonFormatConverter x:Key="JsonFormatConverter"/>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header Info -->
        <StackPanel Grid.Row="0" Margin="0,0,0,16">
            <TextBlock Text="تفاصيل السجل" Style="{DynamicResource MaterialDesignHeadline5TextBlock}"/>
            
            <Grid Margin="0,16,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" MinWidth="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="المستخدم:" FontWeight="Bold" Margin="0,4"/>
                <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding UserName}" Margin="0,4"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="العملية:" FontWeight="Bold" Margin="0,4"/>
                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Action}" Margin="0,4"/>

                <TextBlock Grid.Row="2" Grid.Column="0" Text="نوع الكائن:" FontWeight="Bold" Margin="0,4"/>
                <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding EntityType}" Margin="0,4"/>

                <TextBlock Grid.Row="3" Grid.Column="0" Text="معرف الكائن:" FontWeight="Bold" Margin="0,4"/>
                <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding EntityId}" Margin="0,4"/>

                <TextBlock Grid.Row="4" Grid.Column="0" Text="الوقت:" FontWeight="Bold" Margin="0,4"/>
                <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding Timestamp, StringFormat={}{0:yyyy-MM-dd HH:mm:ss}}" Margin="0,4"/>

                <TextBlock Grid.Row="5" Grid.Column="0" Text="الوصف:" FontWeight="Bold" Margin="0,4"/>
                <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding Description}" TextWrapping="Wrap" Margin="0,4"/>
            </Grid>
        </StackPanel>

        <!-- Values Comparison -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Old Values -->
            <materialDesign:Card Grid.Column="0" Margin="0,0,8,0">
                <StackPanel>
                    <TextBlock Text="القيم القديمة" 
                              Style="{DynamicResource MaterialDesignSubtitle1TextBlock}"
                              Margin="16,16,16,8"/>
                    <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="250">
                        <TextBox Text="{Binding OldValues, Converter={StaticResource JsonFormatConverter}, Mode=OneWay}"
                                TextWrapping="Wrap"
                                IsReadOnly="True"
                                BorderThickness="0"
                                Margin="16,0,16,16"
                                Background="Transparent"/>
                    </ScrollViewer>
                </StackPanel>
            </materialDesign:Card>

            <!-- New Values -->
            <materialDesign:Card Grid.Column="1" Margin="8,0,0,0">
                <StackPanel>
                    <TextBlock Text="القيم الجديدة" 
                              Style="{DynamicResource MaterialDesignSubtitle1TextBlock}"
                              Margin="16,16,16,8"/>
                    <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="250">
                        <TextBox Text="{Binding NewValues, Converter={StaticResource JsonFormatConverter}, Mode=OneWay}"
                                TextWrapping="Wrap"
                                IsReadOnly="True"
                                BorderThickness="0"
                                Margin="16,0,16,16"
                                Background="Transparent"/>
                    </ScrollViewer>
                </StackPanel>
            </materialDesign:Card>
        </Grid>

        <!-- Close Button -->
        <Button Grid.Row="2"
               Content="إغلاق"
               Click="CloseButton_Click"
               Style="{DynamicResource MaterialDesignFlatButton}"
               HorizontalAlignment="Center"
               Margin="0,16,0,0"/>
    </Grid>
</Window>
