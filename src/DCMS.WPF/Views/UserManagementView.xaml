            </Button>
        </Grid>

        <!-- Users DataGrid -->
        <Border Grid.Row="2" 
                BorderBrush="#E0E0E0" 
                BorderThickness="1" 
                CornerRadius="5">
            <DataGrid ItemsSource="{Binding FilteredUsers}" 
                      SelectedItem="{Binding SelectedUser}"
                      AutoGenerateColumns="False" 
