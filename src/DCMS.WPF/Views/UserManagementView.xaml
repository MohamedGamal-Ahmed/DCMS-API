                    </DataGridTemplateColumn>

                    <!-- Active Status -->
                    <DataGridTemplateColumn Header="Ø§Ù„Ø­Ø§Ù„Ø©" Width="80">
                        <DataGridTemplateColumn.CellTemplate>
