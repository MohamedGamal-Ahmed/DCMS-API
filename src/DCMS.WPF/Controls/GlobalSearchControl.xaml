<UserControl x:Class="DCMS.WPF.Controls.GlobalSearchControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="400"
             FlowDirection="RightToLeft">
    
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>
    
    <Grid>
        <Border Background="White" CornerRadius="20" BorderBrush="#E0E0E0" BorderThickness="1" 
                SnapsToDevicePixels="True" Height="40">
            <Border.Effect>
                <DropShadowEffect Color="#BDC3C7" BlurRadius="5" ShadowDepth="1" Opacity="0.2"/>
            </Border.Effect>
            <Grid Margin="15,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Text="ðŸ”" VerticalAlignment="Center" Foreground="Gray" Margin="0,0,10,0"/>

                <TextBox x:Name="txtSearch" Grid.Column="1" 
                         BorderThickness="0" Background="Transparent"
                         VerticalAlignment="Center" FontSize="14"
                         VerticalContentAlignment="Center"
                         Tag="Ø§Ø¨Ø­Ø« Ø¨Ø±Ù‚Ù… Ø§Ù„Ù…ÙˆØ¶ÙˆØ¹ØŒ Ø§Ù„ÙƒÙ„Ù…Ø§Øª Ø§Ù„Ø¯Ø§Ù„Ø©..."
                         TextChanged="TxtSearch_TextChanged">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="TextBox">
                                        <Grid>
                                            <TextBox Text="{Binding Path=Text,
                                                     RelativeSource={RelativeSource TemplatedParent}, 
                                                     Mode=TwoWay,
                                                     UpdateSourceTrigger=PropertyChanged}"
                                                     x:Name="textSource"
                                                     Background="Transparent"
                                                     Panel.ZIndex="2" 
                                                     BorderThickness="0"/>
                                            <TextBlock Text="{TemplateBinding Tag}" Background="Transparent" Panel.ZIndex="1"
                                                       Foreground="LightGray"
                                                       Visibility="{Binding ElementName=textSource, Path=Text.IsEmpty, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                        </Grid>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </TextBox.Style>
                </TextBox>
                
                <Button Grid.Column="2" Content="âŒ" Background="Transparent" BorderThickness="0" Cursor="Hand"
                        Visibility="{Binding IsSearchActive, Converter={StaticResource BooleanToVisibilityConverter}}"
                        Command="{Binding ClearSearchCommand}"
                        Foreground="Gray"/>
            </Grid>
        </Border>

        <Popup x:Name="popResults" 
               PlacementTarget="{Binding ElementName=txtSearch}" 
               Placement="Bottom" 
               VerticalOffset="10"
               StaysOpen="False" 
               AllowsTransparency="True"
               IsOpen="{Binding IsResultsPopupOpen}">
            <Border Background="White" CornerRadius="8" BorderBrush="#BDC3C7" BorderThickness="1" Width="400" MaxHeight="400">
                <Border.Effect>
                    <DropShadowEffect Color="#BDC3C7" BlurRadius="10" ShadowDepth="2" Opacity="0.5"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Text="Ù†ØªØ§Ø¦Ø¬ Ø§Ù„Ø¨Ø­Ø«" FontWeight="Bold" Foreground="Gray" Margin="10" FontSize="12"/>
                    
                    <ListView Grid.Row="1" ItemsSource="{Binding SearchResults}" BorderThickness="0" 
                              ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                              Name="lstResults">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,5" Cursor="Hand" MouseLeftButtonUp="OnResultClick">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="40"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <Border Background="{Binding IconBgColor}" CornerRadius="20" Width="35" Height="35">
                                        <TextBlock Text="{Binding Icon}" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White"/>
                                    </Border>
                                    
                                    <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                        <TextBlock Text="{Binding Subject}" FontWeight="SemiBold" TextTrimming="CharacterEllipsis"/>
                                        <TextBlock Text="{Binding Subtitle}" FontSize="11" Foreground="Gray"/>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                    
                    <TextBlock Grid.Row="1" Text="Ù„Ø§ ØªÙˆØ¬Ø¯ Ù†ØªØ§Ø¦Ø¬" 
                               Visibility="{Binding HasNoResults, Converter={StaticResource BooleanToVisibilityConverter}}"
                               HorizontalAlignment="Center" VerticalAlignment="Center" 
                               Foreground="Gray" Margin="20"/>
                </Grid>
            </Border>
        </Popup>
    </Grid>
</UserControl>
