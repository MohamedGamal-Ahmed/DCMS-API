@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <title>تسجيل الدخول - DCMS Hub</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Tajawal:wght@300;400;500;700;800;900&display=swap" rel="stylesheet">
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        emerald: {
                            DEFAULT: '#008751',
                            50: '#f0fdf4',
                            100: '#dcfce7',
                            600: '#008751',
                            700: '#006d41',
                            800: '#005734',
                            900: '#00472a',
                        }
                    },
                    fontFamily: {
                        sans: ['Tajawal', 'sans-serif'],
                    },
                }
            }
        }
    </script>
    <style>
        body { font-family: 'Tajawal', sans-serif; }
        .input-focus:focus-within { border-color: #008751; box-shadow: 0 0 0 4px rgba(0, 135, 81, 0.05); }
    </style>
</head>
<body class="bg-[#FDFDFE] text-gray-900 min-h-screen flex flex-col">

    <!-- Header -->
    <header class="px-6 py-6 flex items-center justify-between bg-white border-b border-gray-50 mb-10">
        <div class="flex items-center gap-3">
            <button class="w-10 h-10 rounded-xl bg-gray-50 flex items-center justify-center text-gray-400 border border-gray-100">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path strokeLinecap="round" strokeLinejoin="round" strokeWidth="2.5" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v1m6 0H9" />
                </svg>
            </button>
        </div>
        <div class="flex items-center gap-3">
            <div class="flex flex-col text-right">
                <h1 class="text-[15px] font-black text-gray-900 leading-none">DCMS Hub</h1>
                <span class="text-[9px] font-bold text-emerald uppercase tracking-widest mt-0.5">Mobile Viewer</span>
            </div>
            <div class="w-9 h-9 bg-emerald rounded-xl flex items-center justify-center text-white font-black text-lg">
                D
            </div>
        </div>
    </header>

    <main class="flex-1 px-8 pb-10">
        <div class="max-w-md mx-auto space-y-8">
            <div class="text-center space-y-3">
                <h2 class="text-3xl font-black text-gray-900">تسجيل الدخول</h2>
                <p class="text-gray-400 text-sm font-bold leading-relaxed px-6">يرجى إدخال بيانات الاعتماد الخاصة بك للوصول إلى نظام المراسلات</p>
            </div>

            <form action="/Account/Login" method="POST" class="space-y-6">
                <div class="space-y-2.5">
                    <label class="text-[13px] font-black text-gray-700 pr-1">البريد الإلكتروني</label>
                    <div class="relative bg-white border border-gray-100 rounded-[20px] p-1.5 transition-all input-focus">
                        <input type="email" name="Email" placeholder="eng.ahmed@@company.com" class="w-full h-14 bg-transparent px-4 text-sm outline-none font-bold" required>
                    </div>
                </div>

                <div class="space-y-2.5">
                    <label class="text-[13px] font-black text-gray-700 pr-1">كلمة المرور</label>
                    <div class="relative bg-white border border-gray-100 rounded-[20px] p-1.5 transition-all input-focus">
                        <input type="password" name="Password" placeholder="........" class="w-full h-14 bg-transparent px-4 text-sm outline-none font-bold" required>
                    </div>
                </div>

                <div class="flex items-center justify-end gap-3 px-1">
                    <label class="text-[13px] font-black text-gray-500 select-none cursor-pointer">تذكر بياناتي</label>
                    <input type="checkbox" name="RememberMe" class="w-5 h-5 accent-emerald rounded-lg border-gray-200">
                </div>

                <button type="submit" class="w-full h-18 bg-emerald text-white rounded-[24px] font-black text-lg shadow-xl shadow-emerald/20 active:scale-[0.98] transition-all flex items-center justify-center">
                    دخول النظام
                </button>
            </form>

            <div class="text-center pt-4">
                <p class="text-gray-300 text-[11px] font-bold">
                    نسيت كلمة المرور؟ <a href="#" class="text-emerald font-black">تواصل مع الدعم الفني</a>
                </p>
            </div>
        </div>
    </main>

    <footer class="p-8">
        <!-- Bottom Nav Shell (Visual only for login) -->
        <nav class="h-20 bg-white/20 rounded-[32px] border border-gray-100/50 flex items-center justify-between px-10 opacity-30 grayscale">
            <div class="flex flex-col items-center gap-1.5"><svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path strokeLinecap="round" strokeLinejoin="round" strokeWidth="2.5" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/></svg></div>
            <div class="flex flex-col items-center gap-1.5"><svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path strokeLinecap="round" strokeLinejoin="round" strokeWidth="2.5" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/></svg></div>
            <div class="flex flex-col items-center gap-1.5 relative">
                <div class="w-10 h-1 bg-emerald rounded-full absolute -top-4"></div>
                <svg class="w-6 h-6 text-emerald" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path strokeLinecap="round" strokeLinejoin="round" strokeWidth="2.5" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/></svg>
            </div>
        </nav>
    </footer>

</body>
</html>
